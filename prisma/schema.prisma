datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Operator {
  id     String @id @default(uuid())
  name   String
  class  String
  rarity Int
  tier   String
  img    String
  votes  Vote[]
}

model Vote {
  id         String   @id @default(uuid())
  operatorId String
  voteType   VoteType
  createdAt  DateTime @default(now())

  operator   Operator @relation(fields: [operatorId], references: [id])
}

enum VoteType {
  UPVOTE
  NEUTRAL
  DOWNVOTE
}
